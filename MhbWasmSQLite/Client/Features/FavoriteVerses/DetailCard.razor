@foreach (var item in MhbWasmSQLite.Client.Features.FavoriteVerses.EnumsFV.Verses.List.Where(w => w.HasExtraInfo).OrderBy(o => o.Value).ToList())
{
	<div class="card mt-2">
		<div class="card-header h3 px-2">@item.VerseName</div>

		<div class="card-body">
			<h6 class="card-title float-end fst-italic text-black-50">@item.VerseDescription</h6>
		</div>

		<div class="card-body bg-warning">
			<p class="card-text fs-5 ">
				@((MarkupString)@item.ConcatenatedVerses!)
			</p>
		</div>

		<div class="card-body">
			<h5 class="card-title">Comments</h5>
			<p class="card-text fs-6 ml-2">
				@((MarkupString)@item.Commentary!)
			</p>

			@if (item.HasExtraInfo)
			{
				@*<button type="button" class="btn btn-outline-info">Details</button>*@
				<button type="button" class="btn btn-outline-info"
						@onclick="@(e => ButtonClick(item))">
					Details
				</button>

				@if (selectedType is not null)
				{
					if (item.BegId == CurrentVerse!.BegId)
					{
						<div class="border border-primary my-3 p-2">
							<DynamicComponent Type="@selectedType" />
						</div>
					}
				}
			}
		</div>
	</div>
}
