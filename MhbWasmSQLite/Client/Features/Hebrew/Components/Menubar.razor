@using MhbWasmSQLite.Client.Features.Hebrew.Enums

<div class="row">
	<div class="col-12">
		<div class="d-print-none mt-n2">
			<div class="dropdown">
				<a class="btn btn-secondary dropdown-toggle" href="@MenuItems.Chart.Page"
					 role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
					Dropdown link
				</a>
				<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
					@foreach (var item in MenuItems.List.Where(w => w.Value <= MenuItems.Unicode.Value).OrderBy(o => o.Value))
					{
						<li class="list-inline-item bg-light">
							<a class="btn btn-primary dropdown-item @ActiveFilter(item)" href="/@item.Page">
								<i class="@item.Icon"></i>&nbsp; @item.Title
							</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</div>
</div>

